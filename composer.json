{
    "name": "zendframework/zend-expressive-skeleton",
    "description": "Zend expressive skeleton. Begin developing PSR-7 middleware applications in seconds!",
    "type": "project",
    "homepage": "https://github.com/zendframework/zend-expressive-skeleton",
    "license": "BSD-3-Clause",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev",
            "dev-develop": "1.1-dev"
        }
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-expressive": "^1.1 || ^1.1.x-dev@dev",
        "zendframework/zend-expressive-helpers": "^3.0",
        "zendframework/zend-stdlib": "^2.7 || ^3.0",
        "zendframework/zend-config-aggregator": "^0.2.0",
        "zendframework/zend-component-installer": "^0.6.0 || ~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6",
        "squizlabs/php_codesniffer": "^2.7",
        "mikey179/vfsStream": "^1.6",
        "filp/whoops": "^2.0",
        "composer/composer": "^1.0",
        "zendframework/zend-expressive-aurarouter": "^2.0",
        "zendframework/zend-expressive-fastroute": "^2.0",
        "zendframework/zend-expressive-zendrouter": "^2.0",
        "zendframework/zend-expressive-platesrenderer": "^1.2",
        "zendframework/zend-expressive-twigrenderer": "^1.2",
        "zendframework/zend-expressive-zendviewrenderer": "^1.2",
        "zendframework/zend-servicemanager": "^2.7.3 || ^3.0",
        "aura/di": "^3.0",
        "xtreamwayz/pimple-container-interop": "^1.0",
        "zfcampus/zf-development-mode": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/src",
            "ExpressiveInstaller\\": "src/ExpressiveInstaller/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/AppTest/",
            "ExpressiveInstallerTest\\": "test/ExpressiveInstallerTest/"
        }
    },
    "scripts": {
        "pre-install-cmd": "ExpressiveInstaller\\OptionalPackages::install",
        "pre-update-cmd": "ExpressiveInstaller\\OptionalPackages::install",
        "post-create-project-cmd": ["@development-enable"],
        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "check": [
            "@cs-check",
            "@test"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v"
    }
}
